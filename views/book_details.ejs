<body>
    <!-- nav bar start -->
  
      <!-- nav bar end. -->



     <!-- Details About each book -->
        <div class  ="container mt-5 mb-5">
            <div class="row" id="book_preview">
              <div class="col-md-4" >
                <div class="card">
                    <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                      <img src="../img/<%= getabook.bookId %>.jpeg" alt="image photo" class="img-fluid"/>
                      <a href="#">
                        <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                      </a>
                    </div>
                    <div class="card-body">
                      <h5 class="card-title"> </h5>
                      <p class="card-text">
                          <h4>Description</h4>
                          <%- getabook.Description %>
                      </p>
                    </div>
                  </div>
            </div>
            <div class="col-md-8">
                <div class="card">
                    <!-- <div class="card-header">Author: <span><%- getabook.Author %></span> </div> -->
                    <div class="card-body">
                        <h3></h3>
                      <blockquote class="blockquote mb-0">
                        <p>
                            When I am not fighting dragons or chasing the bogey man out of my kids closet.
                        </p>
                        <footer class="blockquote-footer">
                          Author: <cite title="Source Title"><%- getabook.Author %></cite>
                        </footer>
                      </blockquote>
                    </div>
                    <div class="card" style="width: 30rem; ">
                        <ul class="list-group list-group-flush">
                          <li class="list-group-item">Genre: <%- getabook.Genre %>  </li>
                          <li class="list-group-item">Date: <%- getabook.datePublished %></li>
                          <li class="list-group-item">Pages: <%- getabook.pageCount %> </li>
                        </ul>
                      </div>
                  </div>
    
                  <div class="" style="position:relative; margin-top: 50px; left:30px;">
                  <form method="" action="">
                    <a href="/editbook/<%- getabook.bookId %>" class="btn btn-primary"  type="button" data-mdb-ripple-color="dark"> Edit Book  </a>

                    <a  class="btn btn-danger"  href="/delete/<%- getabook.bookId %>" onclick="return confirm('Are you sure you want to delete this book?')"    type="submit">Delete</a>
                  </form> 
                  
                    <!-- <a href="delete/<%= getabook.bookId %>" class="btn btn-danger">Delete</a> -->
                      <!-- <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this book?')"  type="button"   data-confirm=""  data-mdb-ripple-color="dark"> Delete Book</button> -->
                    
                  </div>
                  
            </div>
    
            </div>
        </div>
      <!--End  Details About each book -->




      <!-- footer section, -->
        <!-- Footer -->
        <footer class="text-center text-white mt-5" style="background-color: #0a4275;">
          <!-- Grid container -->
          <div class="container p-4 pb-0">
            <!-- Section: CTA -->
            <section class="">
              <p class="d-flex justify-content-center align-items-center">
                <span class="me-3">Get Books </span>
                <button type="button" class="btn btn-outline-light btn-rounded">View More</button>
              </p>
            </section>
            <!-- Section: CTA -->
          </div>
          <!-- Grid container -->
          <!-- Copyright -->
          <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
